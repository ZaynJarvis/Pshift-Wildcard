# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_brace_style = K&R
curly_bracket_next_line = false
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false # This is necessary since .md use trailing commas to track new line alignment.
